<h2 class='page-header'>New Questions for <%= @quiz.name %></h2>

<%= form_for [@quiz, @question] do |f|  %>
	<div class='form-group'>
		<%= f.text_field :content, class: 'form-control', placeholder: "What is the question?!" %>
	</div>
	
	<div class='form-group'>
		<div class="radio">
			<div class='col-md-1'>
		  	<input type="radio" name="question[answer_id]" class='form-control' value='0'>
			</div>
			<div class='col-md-11'>
				<input name='question[answers][]' placeholder='Please insert an answer' class='form-control'>
			</div>
		</div>
	</div>

	<div class='form-group'>
		<div class="radio">
			<div class='col-md-1'>
		  	<input type="radio" name="question[answer_id]" class='form-control' value='1'>
			</div>
			<div class='col-md-11'>
				<input name='question[answers][]' placeholder='Please insert an answer' class='form-control'>
			</div>
		</div>
	</div>
	<div class='new-groups'>
	</div>

	<button id="add-answer" class='btn btn-warning'>Add Another Answer</button>

	<div class='form-group'>
		<%= f.submit "Save Question And Create Another", class: "btn btn-primary" %>
		<%= f.submit "Save Question And View Quiz", class: "btn btn-primary" %>
	</div>
<% end %>