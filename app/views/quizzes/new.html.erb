<div class='col-md-4 col-md-offset-4'>
	<h2 class="page-header">New Quiz for <%= @classroom.name %></h2>
</div>
<div class='col-md-4 col-md-offset-4 well well-secondary'>
	<%= form_for [@classroom, @quiz] do |f| %>
		<div class='form-group'>
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control', placeholder: "Enter a name for this quiz" %>
		</div>
		<div class='form-group'>
			<%= f.submit "Create Quiz", class:'btn btn-primary' %>
		</div>
	<% end %>
</div>