<span class='quiz-id' style="display:none"><%= @quiz.id %></span>
<div class='row'>
	<div class='col-md-6'>
		<% @questions.each do |question| %>
			<div class='well well-lg question-block' data-question-id="<%= question.id %>" data-correct-answer-id="<%= question.answer_id %>">
				<h3><%= question.content %> </h3>
				<%= form_tag '', method: "post",  class: "question-form" do %>
					<%= hidden_field_tag :student_id, current_user.id %>
					<% question.answers.each_with_index do |answer, i| %>
						<input type="radio" name="answer_id" class='form-control' value='<%= i %>'>
						<%= answer %>
					<% end %>
					<%= submit_tag "Answer", class: "btn btn-primary pull-right" %>
				<% end %>
			</div>
		<% end %>
	</div>

<h2 class="number-of-racers"></h2>
<h2 class="player-number">You are player <%= @player_number %></h2>

	<div class='col-md-6'>
		<div class='race-grid'>
			<% 5.times do |i| %>
				<div class='grid-col <%= "grid-col-#{i}"%>' data-col-id="<%= i %>">
					<% 10.times do |i| %>
						<div class='grid-row <%= "grid-row-#{i}"%>'>
						</div>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>