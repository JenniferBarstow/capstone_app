<%= form_for @user do |f| %>

	<%= f.label :first_name %>
	<%= f.text_field :first_name %>

	<%= f.label :last_name %>
	<%= f.text_field :last_name %>

	<%= f.label :email %>
	<%= f.email_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.submit "Register" %>
<% end %>
</br>

<%= form_tag sign_in_path do %>

	<%= label_tag :email %>
	<%= email_field_tag :email %>

	<%= label_tag :password %>
	<%= password_field_tag :password %>

	<%= submit_tag "Sign In" %>

<% end %>